<resources>

    <!-- Base application theme. -->
    <style name="NoPlanetTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="logoStyle">
        <item name="android:fontFamily">@font/bromello</item>
        <item name="android:textSize">55dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="letrablancaStyle">
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SigninStyle">
        <item name="android:textSize">45dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Buttons">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#000</item>
        <item name="android:radius">50dp</item>
    </style>

    <style name="NoPlanetTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NoPlanetTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="NoPlanetTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
